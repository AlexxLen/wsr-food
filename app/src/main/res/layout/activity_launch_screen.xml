<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch_screen_background"
    tools:context=".activities.launchScreen.LaunchScreen">

    <LinearLayout
        android:layout_width="263dp"
        android:layout_height="263dp"
        android:background="@drawable/launch_screen_background_radius"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/italianno"
            android:text="WSR Food"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="48sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:indeterminateTint="#FF0000" />


        <ImageView
            android:id="@+id/imageView1"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:src="@drawable/progress_bar"

            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>